{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Git Pull",
			"type": "shell",
			"command": "git",
			"args": ["pull", "."],
		  },
	  {
		"label": "Git Add",
		"type": "shell",
		"command": "git",
		"args": ["add", "."],
		"dependsOn": "Git Pull"
	  },
	  {
		"label": "Git Commit",
		"type": "shell",
		"command": "git",
		"args": [
		  "commit",
		  "-m",
		  "new changes"
		],
		"dependsOn": "Git Add"
	  },
	  {
		"label": "Git Push",
		"type": "shell",
		"command": "git",
		"args": [
		  "push"
		],
		"dependsOn": "Git Commit"
	  },
	  {
		"label": "Deploy to Server",
		"type": "shell",
		"command": "npm",
		"args": ["run", "deploy"],
		"dependsOn": "Git Push"
	  },
	  {
		"label": "Deploy Changes",
		"dependsOrder": "sequence",  // Change this property from "sequence" to "parallel"
		"dependsOn": ["Deploy to Server"],
		"group": {
		  "kind": "build",
		  "isDefault": true
		}	  
	  },
	  {
		"label": "Start Preview Changes",
		"type": "shell",
		"command": "npm",
		"args": ["run", "start"],
		"group": {
		  "kind": "test",
		  "isDefault": true
		},
		"isBackground": true,   // This prevents the launch.json to wait for the completion of the task.
		"problemMatcher": {
		   "owner": "custom",   // This is not needed but, required by the problemMatcher Object
		   "pattern": {
			 "regexp": "^$"     // This is not needed but, required by the problemMatcher Object
		   },
		   "background": {
			 "activeOnStart": true,
			 "beginsPattern": "Compiling...",  // Signals the begin of the Task
			 "endsPattern": "Compiled .*"      // Signals that now the initialization of the task is complete
		   }
		}
	 }
	]
  }
  